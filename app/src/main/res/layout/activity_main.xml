<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/bg_welcome"
       android:layout_width="match_parent"
       android:layout_height="268dp"
       android:src="@drawable/bg_welcome_pattern"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="40dp"
       >
   </ImageView>

   <TextView
       android:id="@+id/main_welcome"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:text="Hey! Welcome"
       android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
       android:textStyle="bold"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/bg_welcome"
       app:layout_constraintEnd_toEndOf="parent"

       />

   <TextView
       android:id="@+id/main_welcome_sub"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="This is a great place for you to find\n anything you are looking for"
       android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
       android:textColor="#9ba3aa"
       android:textAlignment="center"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/main_welcome"
       app:layout_constraintEnd_toEndOf="parent"
       />

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/get_started_button"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       android:background="@drawable/gradient"
       android:text="Get Started"
       android:textAllCaps="false"
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/main_welcome_sub"
       app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>